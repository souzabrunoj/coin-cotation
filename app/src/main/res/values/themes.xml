<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CoinQuotation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="alertDialogTheme">@style/Base.AlertDialog</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CoinQuotation" parent="Base.Theme.CoinQuotation" />

    <style name="CircleImageStyle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Base.AlertDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rounded_window</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>